{
  "name": "@arvarus/basic-rules-engine",
  "version": "1.0.0",
  "description": "rule engine",
  "main": "bin/engine.js",
  "types": "bin/type.js",
  "license": "GPL-3.0-only",
  "scripts": {
    "compile": "npm run compile:engine && npm run copy:types",
    "compile:engine": "tsc -b",
    "compile:clean": "tsc -b --clean",
    "copy:types": "copyfiles -f src/types.d.ts bin",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest --coverage"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/deep-freeze-strict": "^1.1.2",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.6",
    "typescript-eslint": "^8.26.0"
  },
  "dependencies": {
    "deep-freeze-strict": "^1.1.1"
  }
}
