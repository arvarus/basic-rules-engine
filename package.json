{
  "name": "@arvarus/basic-rules-engine",
  "version": "2.0.3",
  "description": "rule engine",
  "main": "bin/index.js",
  "types": "bin/index.d.ts",
  "license": "GPL-3.0-only",
  "scripts": {
    "compile": "npm run compile:engine && npm run copy:types",
    "compile:engine": "tsc -b",
    "compile:clean": "tsc -b --clean",
    "copy:types": "copyfiles -f src/types.d.ts bin",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arvarus/basic-rules-engine.git"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/deep-freeze-strict": "^1.1.2",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "typescript-eslint": "^8.48.0"
  },
  "dependencies": {
    "deep-freeze-strict": "^1.1.1"
  }
}
